<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="18dp"
    android:layout_marginBottom="-18dp"
    android:layout_gravity="center_horizontal|bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/colorSecondaryLight"
    android:id="@+id/categories_card"
    app:cardElevation="17dp"
    app:cardCornerRadius="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Preferences "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:paddingHorizontal="5dp"
            android:paddingBottom="20dp"
            android:id="@+id/categories_text"
            android:textAllCaps="true"/>

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#C0E2EF"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:cardElevation="0dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="center">

            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/group_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tbgFlow="true"
                app:tbgRowSpacing="4dp">

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:id="@+id/lb_sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finance"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technology"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autos"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Military"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Culture"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Society"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

                <com.nex3z.togglebuttongroup.button.LabelToggle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/categories_text_size"
                    app:tbgMarkerColor="@color/colorCategoryButton"/>

            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide down to apply."
                android:textSize="10sp"
                android:textColor="#E0E0E0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="3dp"
            />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>