<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">



    <ScrollView

        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home_news_container">



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card_01"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#E3E3D3"
                app:cardCornerRadius="2dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:text="News 1"
                    android:clickable="true"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card_02"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="#E3E3D3"
                app:cardCornerRadius="2dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:text="News 2" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card_03"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="#E3E3D3"
                app:cardCornerRadius="2dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:text="News 3" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card_04"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="#E3E3D3"
                app:cardCornerRadius="2dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:text="News 4" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card_05"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="#E3E3D3"
                app:cardCornerRadius="2dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:text="News 5" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/colorBanner"
            app:cardElevation="11dp"
            android:id="@+id/title_material_card"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest "
                android:paddingHorizontal="20dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="7dp"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</FrameLayout>